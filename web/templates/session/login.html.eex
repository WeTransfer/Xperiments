<html>
  <head>
    <title>WeTransfer - Xperiments</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">

    <style>
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
      }

      .login__block {
        position: relative;
        width: 300px;
        height: 400px;
        background: #f1f1f1;
        box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);
        top: 50%;
        transform: translateY(-50%);
        margin: 0 auto;
        text-align: center;
        padding: 100px 0px;
        box-sizing: border-box;
      }
      .login__block-we-logo {
        width: 100%;
        height: 50px;
        overflow: hidden;
      }
      .login__block-we-logo img {
        height: 100%;
      }

      .login__block-form {

      }
      .login__block-form a {
        display: block;
        height: 40px;
        width: 200px;
        background: #409FFF;
        color: #fff;
        text-decoration: none;
        margin: 0 auto;
        line-height: 40px;
        font-size: 13px;
      }

      h3 {
        font-weight: 300;
      }

    </style>
  </head>
  <body>
    <div class="login__block">
      <div class="login__block-we-logo">
        <img src="/images/wt.png" />
      </div>
      <h3>Xperiments</h3>
      <div class="login__block-form">
        <a href="/auth/google">Sign in with Google</a>
      </div>
    </div>
  </body>
</html>
